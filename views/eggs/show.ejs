<% layout('layouts/boilerplate') %> 

<div class="showContent">
  <div class="card" style="width: 30rem;">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Date: <%= egg.date %></li>
            <li class="list-group-item">Location: <%= egg.location %></li>
            <li class="list-group-item">Quantity: <%= egg.quantity %></li>
            <li class="list-group-item"><a class="linkItem" href="https://api.whatsapp.com/send?phone=91<%= egg.contact  %>">Contact the owner through whatsapp</a></li>
            <li class="list-group-item "><a class="linkItem" href="/eggs/<%= egg._id %>/edit">Edit</a></li>
    </ul>
    <div class="card-footer">
      <form action="/eggs/<%= egg._id %>?_method=DELETE" method="POST">
        <button class="deleteBtn btn"> Delete</button></form>
    </div>
  </div>
</div>