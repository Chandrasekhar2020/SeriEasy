<% layout('layouts/boilerplate') %>

<div class="pageHeadDiv">
  <h2 class="pageHead">Edit form</h2>
  </div>

  <div class="newContent">
    <form action="/eggs/<%= egg._id %>?_method=PUT" method="POST" class="newInnerContent">
        <label for="date" class="form-control">Hatch Date:</label>
        <input type="date" id="date" name="date" class="form-control" value=""><br>
        <label for="quantity" class="form-control">Quantity Available(in dfls):</label>
        <input type="number" id="quantity" name="quantity" min="0" class="form-control" value="<%= egg.quantity %>"><br>
        <label for="location" class="form-control">Location:</label>
        <input type="text" id="location" name="location" class="form-control" value="<%= egg.location %> "><br>
        <label for="contact" class="form-control">Contact:</label>
        <input type="text" id="contact" name="contact" class="form-control" value="<%= egg.contact %> "><br>
        <div class="text-center pt-1 mb-5 pb-1">
            <button class="btn btn-block  mb-3" style="background-color:#6b21a8 ; color: white;">Submit</button>
          </div>
    </form>
</div>
