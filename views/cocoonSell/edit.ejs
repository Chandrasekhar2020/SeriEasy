<% layout('layouts/boilerplate') %>

<div class="pageHeadDiv">
    <h2 class="pageHead">Edit Form</h2>
</div>

<div class="newContent">
    <form action="/cocoonSell/<%= buyer._id %>?_method=PUT" method="POST" class="newInnerContent">
        <label for="name" class="form-control">Name:</label>
        <input type="text" id="name" name="name" class="form-control" value="<%= buyer.name %>" ><br>
        <label for="location" class="form-control">Location:</label>
        <input type="text" id="location" name="location" class="form-control" value="<%= buyer.location %>"><br>
        <label for="contact" class="form-control">Contact:</label>
        <input type="contact" name="contact" class="form-control" value="<%= buyer.contact %>"><br>
        <div class="text-center pt-1 mb-5 pb-1">
            <button class="btn btn-block  mb-3" style="background-color:#6b21a8 ; color: white;">Submit</button>
          </div>
    </form>
</div>